<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_obilgilendirme" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/kullanici_adi"
        android:ems="10"
        android:id="@+id/et_okullanici_adi" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_osifre"
        android:text="@string/sifre" />

    <Button
        android:text="@string/ogrenci_giris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ogiris" />

</LinearLayout>