<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ogrenci_ders_yoklama_bilgisi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comm.example.aliumutcan.mobil_ogrenci_yoklama.Ogrenci_ders_yoklama_bilgisi"
    android:background="@color/common_google_signin_btn_text_dark_default">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spn_ogrencinin_dersleri"
            android:background="@color/common_google_signin_btn_text_dark_default" />

        <Button
            android:text="Dersin Yoklama Bilgisini Getir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_yoklama_bilgisini_getir" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_devamsizlik_bilgis"
            android:textFilterEnabled="false"
            android:touchscreenBlocksFocus="false"
            android:textColor="#ffff00"
            style="@android:style/Widget.Holo.Light.ListView" />
    </LinearLayout>
</RelativeLayout>
